<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_repo_form" model="ir.ui.view">
      <field name="model">runbot.repo</field>
      <field name="inherit_id" ref="runbot.view_repo_form"/>
      <field name="arch" type="xml">

        <xpath expr="//group[@string='Params']" position="after">
          <group string="Gitlab">
            <field attrs="{'invisible': [('hosting', '!=', 'gitlab')]}" name="mr_only"/>
            <field attrs="{'invisible': [('hosting', '!=', 'gitlab')]}" name="sticky_protected"/>
          </group>
        </xpath>
      </field>
    </record>

  </data>
</openerp>
